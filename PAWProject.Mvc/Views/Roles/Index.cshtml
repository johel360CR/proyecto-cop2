@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>
@using Microsoft.AspNetCore.Identity
@inject RoleManager<IdentityRole> RoleManager
@inject UserManager<IdentityUser> UserManager

<h2>Administrar Roles de Usuarios</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles actuales</th>
            <th>Asignar Rol</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            var roles = await UserManager.GetRolesAsync(user);
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", roles)</td>
                <td>
                    <form asp-action="AssignRole" method="post" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="roleName" class="form-select form-select-sm" style="width:150px;display:inline-block;">
                            @foreach (var role in RoleManager.Roles)
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Asignar</button>
                    </form>

                    <form asp-action="RemoveRole" method="post" class="d-inline">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="roleName" class="form-select form-select-sm" style="width:150px;display:inline-block;">
                            @foreach (var role in roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-sm btn-danger">Quitar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
